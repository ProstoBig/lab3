<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lab3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lab3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">lab3</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-5" asp-area="" asp-page="/EmployeeList">Employees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-5" asp-area="" asp-page="/Bonuses">Bonuses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-5" asp-area="" asp-page="/Task1">Task1</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-5" asp-area="" asp-page="/Task2">Task2</a>
                            </li>
                        }
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-5" href="#" onclick="document.getElementById('logoutForm').submit();">Вихід</a>
                                <form id="logoutForm" method="post" asp-area="" asp-page="/Login" asp-page-handler="Logout" style="display: none;"></form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link fs-5" asp-page="/Login">Вхід</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fs-5" asp-controller="Signup" asp-action="Index">Реєстрація</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - lab3</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
